{
	"expo": {
		"name": "Offerly",
		"slug": "offerly-mobile-app",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/images/icon.png",
		"scheme": "myapp",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": true,
		"ios": {
			"supportsTablet": true,
			"bundleIdentifier": "com.offerly.mobile",
			"backgroundColor": "#6633cc",
			"icon": "./assets/icons/app-icon-ios.png",
			"infoPlist": {
				"NSAppTransportSecurity": {
					"NSAllowsArbitraryLoads": true
				}
			}
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/icons/app-icon-android.png",
				"backgroundColor": "#6633cc"
			},
			"package": "com.offerly.mobile"
		},
		"web": {
			"bundler": "metro",
			"output": "static",
			"favicon": "./assets/images/favicon.png"
		},
		"plugins": [
			"expo-router",
			[
				"expo-splash-screen",
				{
					"image": "./assets/icons/logo-white.png",
					"imageWidth": 125,
					"resizeMode": "contain",
					"backgroundColor": "#6633cc"
				}
			],
			[
				"expo-font",
				{
					"fonts": [
						"./assets/fonts/Tajawal-Bold.ttf",
						"./assets/fonts/Tajawal-Regular.ttf",
						"./assets/fonts/Tajawal-Light.ttf",
						"./assets/fonts/Tajawal-Medium.ttf"
					]
				}
			],
			"expo-secure-store",
			[
				"expo-build-properties",
				{
					"android": {
						"usesCleartextTraffic": true
					},
					"ios": {
						"flipper": true
					}
				}
			],
			"expo-asset"
		],
		"experiments": {
			"typedRoutes": true
		},
		"extra": {
			"eas": {
				"projectId": "28ac0672-e462-49e3-96f3-8566f8a85621"
			}
		}
	}
}
